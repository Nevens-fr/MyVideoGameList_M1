<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreenActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/home_activity_id2"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="5dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homeLogo"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/black"
            android:text="@string/registerBack"
            android:textColor="@color/text_orange_color"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/home_activity_id3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_activity_id2"
        android:layout_marginTop="100sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registerTitle"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40sp">

            <EditText
                android:id="@+id/user_search_text_id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bottom_border"
                android:layout_weight="0"
                android:hint="@string/registerEmailText"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/light_grey"
                android:layout_marginLeft="80sp"
                android:layout_marginRight="80sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/user_search_text_id"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40sp">

                <EditText
                    android:id="@+id/user_search_text_id2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_bottom_border"
                    android:layout_weight="1"
                    android:hint="@string/registerPasswordText"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_grey"
                    android:layout_marginRight="20sp"
                    />
                <EditText
                    android:id="@+id/user_search_text_id3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_bottom_border"
                    android:layout_weight="1"
                    android:hint="@string/registerPasswordText2"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_grey"
                    android:layout_marginLeft="20sp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/user_search_text_id4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40sp"
                android:background="@drawable/edittext_bottom_border"
                android:layout_weight="1"
                android:hint="@string/registerNameText"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/light_grey"
                android:layout_marginLeft="80sp"
                android:layout_marginRight="80sp"
                />

            <Button
                android:layout_marginTop="40sp"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:text="@string/registerButton"
                android:textColor="@color/text_orange_color"
                android:textSize="20dp"
                />


        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>